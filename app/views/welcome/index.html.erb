<% if user_signed_in? %>
  <div class='container'>
    <img src="https://www.emojibase.com/resources/img/emojis/apple/x1f4aa.png.pagespeed.ic.qZG9DBXHxk.png" alt="Flex Logo">
    <div id="gyms" class="align">
    <br>
      <p><%= link_to "View Gyms", root_path, id: "gyms-link", class: "buttonizing"  %></p>
      <ul id="gyms-pylon">
      </ul>
    </div>

    <div id="pref" class="align">

    <% if current_user.preference == nil %>
        <%= link_to "Preferences",  new_preference_path, id: "new-pref", class: "buttonizing" %>
    <% else %>
        <p><%= link_to "Update FlexMate Preferences", edit_preference_path(current_user.preference.id), id:"update-pref", class: "buttonizing" %></p>
      <!-- <div id="show-users"> -->
        <p><%= link_to "View FlexMates", users_path, id: "matched-users", class: "buttonizing"  %></p>
    <% end %>
    <img src="https://www.emojibase.com/resources/img/emojis/apple/x1f4aa.png.pagespeed.ic.qZG9DBXHxk.png" alt="Flex Logo">
    <div id="gyms" class="align">
    </div>
  </div>
<% end %>


