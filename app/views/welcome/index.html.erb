
<% if !user_signed_in? %>
<div class="spacer"></div>

<h2 class="center">Welcome to</h2>
  <h1 class="center-big">FLEX</h1>
  <h2 class="center">Stay accountable, make friends and hit the gym!</h2>
  <br>
  <img class="logo" src="https://www.emojibase.com/resources/img/emojis/apple/x1f4aa.png.pagespeed.ic.qZG9DBXHxk.png" alt="Flex Logo">
<% end %>

<% if user_signed_in? %>
  <div class='container' id="gyms">
  <div class="align">
  <br>
  <img class="logo" src="https://www.emojibase.com/resources/img/emojis/apple/x1f4aa.png.pagespeed.ic.qZG9DBXHxk.png" alt="Flex Logo">
  <br>
    <% if current_user.gyms.empty? && current_user.preference == nil %>
      <p><a id='new-gym' href='/gyms/new'>Add a new gym</a></p>
    <% elsif current_user.gyms != nil && current_user.preference == nil %>
      <p><%= link_to "Set Preferences",  new_preference_path, id: "new-pref", class: "buttonizing" %></p>
    <% elsif current_user != nil && current_user.preference != nil %>
        <p><%= link_to "View Gyms", gyms_path, id: "gyms-link", class: "buttonizing"  %></p>
        <p><%= link_to "Update FlexMate Preferences", edit_preference_path(current_user.preference.id), id:"update-pref", class: "buttonizing" %></p>
        <p><%= link_to "View FlexMates", users_path, id: "matched-users", class: "buttonizing"  %></p>
    <% end %>
  </div>
  </div>
<% end %>

